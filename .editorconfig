# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# 4 space indentation
[*.{py,rst,ini,txt,php}]
indent_style = space
indent_size = 4
max_line_length = 80

# Tab indentation (no size specified)
[*.js]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Indentation override for all JS under lib directory
[lib/**.js]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.yml]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.css]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
