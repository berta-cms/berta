<ul id="multisites" {% if ulAtribute.class is defined %} class="{{ ulAtribute.class }}" style="{{ ulAtribute.style }}" data-path="{{ ulAtribute.data }}" {% endif %}>
  {% for site in sites %}
      <li{% if site.className %} class="{{ site.className }}"{% endif %}>
        <a href="{{ site.link }}">
          {{ site.name }}
        </a>
      </li>
  {% endfor %}
</ul>

